      - if @image
        - case @image.ext
        - when '.pdf'
          %embed.source-file.preview-window.col-sm-6.col-md-6.col-lg-6.col-xl-6{src: @full_path, type: 'application/pdf', style: "min-height: 40em; float: left; padding: 0px 0px"}
