%h5
  %input#s_drive_search{ name: 'derp', value: 'derp'}
%hr
%ul.nav.nav-tabs.mainTabs{role: 'tablist'}
  - ['2012', '2013', '2014', '2015','2016'].each_with_index do |date, i|
    -if i == 0
      %li.nav-item.s_drive
        %a.nav-link.active{href: "#s_drive#{date}Action", role:'tab', 'data-toggle': 'tab', 'data-target':  "#s_drive#{date}Action"}
          = date
    -else
      %li.nav-item.s_drive
        %a.nav-link{href: "#s_drive#{date}Action", role:'tab', 'data-toggle': 'tab', 'data-target':  "#s_drive#{date}Action"}
          = date
.tab-content.col-sm-12.col-md-12.col-xlg-12.offset-md-12.offset-lg-12.offset-xl-12{style: 'background: white; padding-bottom: 1em;'}
  - ['2012', '2013', '2014', '2015', '2016', '2017'].each_with_index do |date, i|
    - if i == 0
      .nav-pane.s_drive.fade.in.active{role: 'tabpanel',class: "s_drive#{date}"}
    - else
      .nav-pane.s_drive.fade.in{role: 'tabpanel', class: "s_drive#{date}"}
